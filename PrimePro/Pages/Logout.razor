@page "/logout"
@inject PrimePro.Services.TokenStorageService TokenStorage
@inject PrimePro.Services.AuthState AuthState
@inject NavigationManager Navigation

<h3>Cerrando sesión...</h3>

@code {
 protected override async Task OnInitializedAsync()
 {
 // Limpiar token y actualizar estado de autenticación
 await TokenStorage.ClearTokenAsync();
 await AuthState.UpdateAsync();

 // Pequeña espera para que el mensaje sea visible brevemente
 await Task.Delay(300);

 // Redirigir a la página principal
 Navigation.NavigateTo("/");
 }
}
